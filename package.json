{
  "name": "ginn.space",
  "version": "1.1.1",
  "description": "My Webpage",
  "private": true,
  "author": "Scott",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shoginn/ginn.space/issues"
  },
  "homepage": "https://ginn.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shoginn/ginn.space.git"
  },
  "main": "index.js",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "cspell": "^6.31.1",
    "html-validate": "^7.14.0",
    "html-validate-markdown": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-check-updates": "^16.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-go-template": "^0.0.13",
    "rimraf": "^4.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "cspell": {
    "ignoreWords": [
      "Ginn"
    ],
    "words": [
      "adduser",
      "Algodaruma",
      "Algorand",
      "beautifulsoup",
      "ccaf",
      "Contabo",
      "coursera",
      "Daruma",
      "Discordx",
      "Homelab",
      "lastmod",
      "ments",
      "numpy",
      "pydantic",
      "rgba",
      "shoginn",
      "skillsets",
      "Superbadges",
      "Trailhead",
      "usermod",
      "ussf"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "prettier . -c",
    "precommit": "lint-staged",
    "clean:hugo": "rimraf hugo{.log,_stats.json} resources public assets/jsconfig.json .hugo_build.lock _vendor",
    "serve": "run-s serve:hugo",
    "_start:_hugo": "./shoginn_scripts/bin/build/hugo.sh",
    "serve:hugo": "cross-env SHOGINN_SCRIPTS_SERVE_HUGO=1 run-s _start:_hugo",
    "build:hugo": "cross-env SHOGINN_SCRIPTS_BUILD_HUGO=1 run-s clean:hugo _start:_hugo",
    "build": "run-s build:hugo",
    "update:deps": "npx ncu && npm install"
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "cspell"
    ]
  }
}
