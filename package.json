{
  "name": "ginn.space",
  "version": "0.0.1",
  "description": "My Webpage",
  "private": true,
  "author": "Scott",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shoginn/ginn.space/issues"
  },
  "homepage": "https://ginn.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shoginn/ginn.space.git"
  },
  "main": "index.js",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0"
  },
  "devDependencies": {
    "cspell": "^6.12.0",
    "html-validate": "^7.5.0",
    "html-validate-markdown": "^3.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "^0.0.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "cspell": {
    "ignoreWords": [
      "Ginn"
    ],
    "words": [
      "beautifulsoup",
      "Homelab",
      "ments",
      "numpy",
      "pydantic",
      "rgba",
      "shoginn",
      "skillsets",
      "Superbadges",
      "Trailhead",
      "ussf"
    ]
  },
  "scripts": {
    "build": "rimraf ./public ./resources ./_vendor",
    "clean:hugo": "rimraf hugo{.log,_stats.json} resources public assets/jsconfig.json .hugo_build.lock",
    "start:dev": "npm run build && hugo server --gc",
    "prod": "npm run build && hugo --gc --minify",
    "prepare": "husky install",
    "lint": "prettier . -c",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "cspell"
    ]
  }
}
